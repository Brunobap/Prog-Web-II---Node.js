<div class="pagina container">
    <!-- The Modal -->
    <div id="modal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="txtModal">Deseja mesmo deletar o usu√°rio "(user_name vai aqui)".</p>
            <a id="btnModal" href="/admin/usuarios?deletar=" class="btn-excluir">
                <i class="fa-regular fa-trash-can"></i> Excluir
            </a>
        </div>
    </div>
    <div class="cabecalho flex">
        <br />
    </div>
    <div class="tabela-responsiva">
        <table>
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>E-mail</th>
                    <th>Assunto</th>
                    <th>Mensagem</th>
                    <th width="95"></th>
                </tr>
            </thead>
            <tbody>
                {{#each mensagem}}
                   <tr>
                        <td>
                            {{{this.nome}}}
                        </td>
                        <td>
                            {{{this.email}}}
                        </td>
                        <td id="assunto{{{this.id}}}">
                            {{{this.assunto}}}
                        </td>
                        <td>
                            {{{this.mensagem}}}
                        </td>
                        <td>
                            <button onclick={deletar({{{this.id}}},getElementById("assunto{{{this.id}}}").textContent)} class="btn-excluir">
                                <i class="fa-regular fa-trash-can"></i> Excluir
                            </button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    // Get modal and its elements
    var modal = document.getElementById("modal");
    var btnModal = document.getElementById("btnModal");
    var txtModal = document.getElementById("txtModal");
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    // When the user clicks the button, open the modal 
    function deletar(id, assunto) {
        btnModal.setAttribute('href', "/admin/mensagens?deletar="+id);
        txtModal.textContent = "Deseja mesmo excluir a mensagem sobre '"+assunto+"'?";
        modal.style.display = "block";
    }
    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
        modal.style.display = "none";
    }
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>
